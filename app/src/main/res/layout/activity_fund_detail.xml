<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_FundCode"
        android:text="000001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_FundName"
        android:text="华夏成长"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_LastWorkingDay"
        android:text="上个工作日"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_LastDayFundVal"
        android:text="上个工作日净值"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_CurrentFundVal"
        android:text="当前估算净值"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_CurrentFundRFRange"
        android:text="当前估算涨跌幅度"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>